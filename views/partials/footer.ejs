    <br/>
    <ul id="new" style="text-align: center;">
        <% if (currentUser) { %>
          <li style="margin-bottom: 2px;">Welcome <%=currentUser.fullname%>!</li>
          <li style="margin-bottom: 2px;">
            <a href="/new" class="btn btn-success btn-sm">Add New</a>
          </li>
          <li style="margin-bottom: 2px;">
            <form action="/login?_method=DELETE" method="POST">
            <input type="submit" class="btn btn-primary btn-sm" value="Log Out"  />
          </li>
    <% } %>
    </ul>
  </div>



</footer>
