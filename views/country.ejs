<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('./partials/head.ejs') %>

<body>
    <%- include ('./partials/header.ejs') %>
  <div class="container-fluid frontPage">
    <h1 id="frontH1" style="text-align: center;"> Country </h1>

    <ul>
      <div id="albumArt" class="row">
        <% for (let i = 0; i < records.length; i++) { %>
        <%  if(records[i].genre === 'country') { %>


        <div class="col"
        <li >
          <div class="card cardAlbum">
            <a href='/<%=records[i].id%>'>
            <img class='images' src='<%=records[i].cover%>' />
            </a>
           <div class="card-body">
             <h6 class="card-title" style="text-align: left;"><%=records[i].name%><br/><%=records[i].artist%></h6>

           </div>

          </div>
        </li>

        </div>

        <% } %>
      <% } %>
      </div>
    </ul>

<%- include ('./partials/footer.ejs') %>

</div>
